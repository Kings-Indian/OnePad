{
  "manufacturer": "Tanishq Goyal",
  "keyboard_name": "OnePad",
  "maintainer": "KingsIndian",
  "bootloader": "rp2040",
  "processor": "RP2040",
  "url": "https://github.com/Kings-Indian/OnePad",
  "diode_direction": "COL2ROW",

  "matrix_pins": {
    "cols": ["GP1", "GP2", "GP4"],
    "rows": ["GP29", "GP28", "GP27"]
  },

  "ws2812": {
    "pin": "GP3"
  },

  "features": {
    "bootmagic": true,
    "extrakey": true,
    "mousekey": true,
    "nkro": true
  },

  "usb": {
    "vid": "0xFEED",
    "pid": "0x0000",
    "device_version": "1.0.0"
  },

  "layouts": {
    "LAYOUT": {
      "layout": [
        { "matrix": [0, 0], "x": 0, "y": 0 },
        { "matrix": [0, 1], "x": 1, "y": 0 },
        { "matrix": [0, 2], "x": 2, "y": 0 },

        { "matrix": [1, 0], "x": 0, "y": 1 },
        { "matrix": [1, 1], "x": 1, "y": 1 },
        { "matrix": [1, 2], "x": 2, "y": 1 },

        { "matrix": [2, 0], "x": 0, "y": 2 },
        { "matrix": [2, 1], "x": 1, "y": 2 },
        { "matrix": [2, 2], "x": 2, "y": 2 }
      ]
    }
  }
}
